# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good = '#00dc00'
        color_degraded = '#ff00ff'
}

order += "ipv6"
order += "path_exists VPN"
order += "read_file ping"
order += "wireless _first_"
order += "ethernet _first_"
order += "disk /home/flo/.local/share/containers"
order += "load"
order += "memory"
order += "volume master"
order += "battery all"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid)"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: (%speed)"
        format_down = "E: down"
}

battery all {
        format = "bat: %status %percentage %remaining"
}

disk "/home/flo/.local/share/containers" {
        format = "~/.l/s/containers %avail"
        format_not_mounted = "disk missing"
}

read_file ping {
        path = "/tmp/tmp.ping-success"
        format = ""
        format_bad = "%title failed!"
}

path_exists VPN {
        path = "/proc/sys/net/ipv4/conf/tun0"
        format = "%title: %status"
}
volume master {
        format = "♪: %volume"
        format_muted = "♪: muted (%volume)"
        device = "pulse:alsa_output.pci-0000_00_1f.3.analog-stereo"
}

load {
        format = "load: %1min"
}

memory {
        format = "mem: %used"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
