{
  "title": "Change caps_lock to control",
  "rules": [
    {
      "description": "Change caps_lock to Control",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ]
        }
      ]
    }
  ]
}
